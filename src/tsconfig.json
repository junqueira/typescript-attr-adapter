{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "amd",
        "moduleResolution": "classic",
        "outDir": "../dist/",
        "sourceMap": false,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}